{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "removeComments": false,
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react",
        "module": "esnext",
        "typeRoots": [
            "./types",
            "./node_modules/@types",
            "./typings.d.ts"
        ],
        "declaration": false
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./",
        "./src/"
    ]
}
